<body>
    <%- include('../../partials/navbar.ejs') %>
    <h1> <%=singleUser.firstName%> <%=singleUser.lastName%>  </h1>
    <img src="<%= singleUser.avatarImage %>" alt = "Avatar Image">
    <p>Username: <%= singleUser.userName %></p>
